#include <iostream>
using namespace std;

int main()
{
    int first, second, third;
    int result;
    cout << "Enter the first integer: ";
    cin >> first;
    cout << endl << "Enter the second integer: ";
    cin >> second;
    cout << endl << "Enter the third integer: ";
    cin >> third;
    result = ((first + second)  + third) / 3 ;
    cout << "The average is : " << (float)result;
    return 0;
  
};
